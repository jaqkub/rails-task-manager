<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<p>
  <% if @task.completed %>
    <strong>Completed ✔</strong>
  <% else %>
    <strong>Not completed ❌</strong>
  <% end %>
</p>

<p>
  <%= link_to "Edit this task", edit_task_path(@task) %>
</p>

<p>
  <%= link_to "Back to list", tasks_path %>
</p>
